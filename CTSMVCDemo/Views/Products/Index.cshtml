@model IEnumerable<CTSMVCDemo.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.proName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.proName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category.catName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.proId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.proId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.proId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
